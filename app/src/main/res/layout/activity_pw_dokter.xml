<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".pw_dokter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:padding="15dp"
            app:srcCompat="@drawable/logo" />

        <ProgressBar
            android:id="@+id/load"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/konten"
            android:background="@drawable/bg_rounded"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/password"
                        android:drawableStart="@drawable/key"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorAccent"
                        android:textColorHint="@color/colorFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Password Lama"
                        android:inputType="textPassword" />

                    <EditText
                        android:id="@+id/new_password"
                        android:drawableStart="@drawable/key"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorAccent"
                        android:textColorHint="@color/colorFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Password Baru"
                        android:inputType="textPassword" />

                    <CheckBox
                        android:id="@+id/show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat Password"
                        android:textColor="@color/colorAccent">
                    </CheckBox>

                    <Button
                        android:id="@+id/ganti"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_konten"
                        android:drawableLeft="@drawable/reg"
                        android:drawableTint="@color/colorFont"
                        android:text="Ganti Password"
                        android:textColor="@color/colorFont" />

                </LinearLayout>
            </ScrollView>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>