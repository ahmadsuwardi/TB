<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".upload_jadwal_checkup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />

        <ProgressBar
            android:id="@+id/load"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bg_konten"
            android:drawableLeft="@drawable/reg"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorFont"
            android:padding="15dp"
            android:layout_marginRight="15dp"
            android:text="Tambah Jadwal"
            android:textColor="@color/colorFont" />

        <ScrollView
            android:background="@drawable/bg_rounded"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/konten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/bg_rounded"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/photo"
                            android:src="@drawable/profil"
                            android:layout_margin="3dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"></ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nama dokter : "
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/nama_dokter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dokter"
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nip dokter : "
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/nip_dokter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NIP"
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/d1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Spesialis : "
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/spesialis_dokter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Spesialis"
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/asfd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nomer HP : "
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/nope_dokter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dokter"
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ads"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Alamat praktek : "
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/alamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Alamat"
                                android:textColor="@color/colorFont"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>