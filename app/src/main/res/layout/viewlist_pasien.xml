<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_konten"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nip_dokter_"
            android:visibility="gone"></TextView>

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/photo"
                    android:src="@drawable/profil"
                    android:layout_margin="3dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"></ImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nip"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nama Pasien"
                        android:textAllCaps="true"
                        android:textColor="@color/colorFont"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/nik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="NIK"
                        android:textColor="@color/colorFont"
                        android:textSize="23sp"></TextView>

                    <TextView
                        android:id="@+id/jk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Jenis Kelamin"
                        android:textColor="@color/colorFont"
                        android:textSize="23sp"></TextView>

                    <TextView
                        android:id="@+id/umur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Umur"
                        android:textColor="@color/colorFont"
                        android:textSize="23sp"></TextView>
                    <TextView
                        android:id="@+id/bb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Berat Badan"
                        android:textColor="@color/colorFont"
                        android:textSize="23sp"></TextView>

                    <TextView
                        android:id="@+id/nope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nomer HP"
                        android:textColor="@color/colorFont"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/nope_wali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nomer HP wali"
                        android:textColor="@color/colorFont"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/tgl_lahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Tanggal Lahir"
                        android:textColor="@color/colorFont"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/rp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Riwayat Penyakit"
                        android:textColor="@color/colorFont"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Alamat"
                        android:textColor="@color/colorFont"
                        android:textSize="18sp"></TextView>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>