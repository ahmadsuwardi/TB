<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".profil_pasien">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:padding="15dp"
            app:srcCompat="@drawable/logo" />

        <FrameLayout
            android:id="@+id/konten"
            android:background="@drawable/bg_rounded"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/photo"
                        android:src="@drawable/profil"
                        android:layout_margin="3dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"></ImageView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="NIK Pasien"
                            android:textAllCaps="true"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Nama Pasien"
                            android:textAllCaps="true"
                            android:textColor="@color/colorFont"
                            android:textSize="20sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/jk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Jenis Kelamin"
                            android:textColor="@color/colorFont"
                            android:textSize="23sp"></TextView>

                        <TextView
                            android:id="@+id/umur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Umur"
                            android:textColor="@color/colorFont"
                            android:textSize="23sp"></TextView>

                        <TextView
                            android:id="@+id/bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Berat Badan"
                            android:textColor="@color/colorFont"
                            android:textSize="23sp"></TextView>

                        <TextView
                            android:id="@+id/rp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Riwayat Penyakit"
                            android:textColor="@color/colorFont"
                            android:textSize="23sp"></TextView>

                        <TextView
                            android:id="@+id/nope"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Nomer HP"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/nope_wali"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Nomer HP wali"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/tgl_lahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Tanggal Lahir"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"></TextView>

                        <TextView
                            android:id="@+id/alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Alamat"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"></TextView>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>