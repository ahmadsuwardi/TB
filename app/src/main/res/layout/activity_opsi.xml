<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".opsi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />

        <ProgressBar
            android:id="@+id/load"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/konten"
            android:background="@drawable/bg_rounded"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:text="Masuk Sebagai :"
                    android:textColor="@color/colorFont"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dk"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="end|fill"
                        android:background="@drawable/bg_rounded"
                        android:drawableTop="@drawable/dok"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="Dokter"
                        android:textColor="@color/colorFont" />

                    <Button
                        android:id="@+id/user"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="end|fill"
                        android:background="@drawable/bg_rounded"
                        android:drawableTop="@drawable/profil"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="Pasien"
                        android:textColor="@color/colorFont" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/admin"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="end|fill"
                        android:background="@drawable/bg_rounded"
                        android:drawableTop="@drawable/admin"
                        android:drawablePadding="5dp"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="TU Rumah Sakit"
                        android:textColor="@color/colorFont" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>