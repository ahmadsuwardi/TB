<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_konten"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/photo"
                    android:src="@drawable/dok"
                    android:layout_margin="3dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"></ImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nama Dokter"
                        android:textAllCaps="true"
                        android:textColor="@color/colorFont"
                        android:textSize="25sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/nip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nip"
                        android:textColor="@color/colorFont"
                        android:textSize="24sp"></TextView>

                    <TextView
                        android:id="@+id/spesialis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Spesialis"
                        android:textColor="@color/colorFont"
                        android:textSize="23sp"></TextView>

                    <TextView
                        android:id="@+id/nope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Nomer HP"
                        android:textColor="@color/colorFont"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Alamat Praktek"
                        android:textColor="@color/colorFont"
                        android:textSize="15sp"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:layout_gravity="right">

                        <ImageButton
                            android:id="@+id/del_dokter"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_konten"
                            app:srcCompat="@drawable/del" />

                        <ImageButton
                            android:id="@+id/edit_dokter"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_konten"
                            app:srcCompat="@drawable/pencil" />

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>